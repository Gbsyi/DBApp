<Window x:Class="DBApp.CampsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBApp"
        mc:Ignorable="d"
        Title="CampsWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Menu-->
        
        <Menu Grid.Row="0">
            <MenuItem Header="..."></MenuItem>
            <MenuItem Header="Сменить пользователя" Click="ChangeUser"></MenuItem>
        </Menu>
        
        <!--Content-->

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        <DockPanel x:Name="LeftPanel" Grid.Column="0"></DockPanel>
        <DockPanel x:Name="RightPanel" Grid.Column="1"></DockPanel>
        </Grid>
    </Grid>
</Window>
